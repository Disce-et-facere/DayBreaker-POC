<!-- res/values/themes.xml -->
<resources>
    <style name="Base.Theme.Daybreaker_Drapes_App" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Set primary and surface colors for the dark theme -->
        <item name="colorPrimary">@color/my_dark_primary</item>
        <item name="colorPrimaryVariant">@color/my_dark_primary_variant</item>
        <item name="colorOnPrimary">@color/my_dark_on_primary</item>

        <!-- Main background colors -->
        <item name="colorSurface">@color/my_dark_surface</item>
        <item name="colorOnSurface">@color/my_dark_on_surface</item>
        <!-- Optional: Additional background color variants -->
        <item name="colorSurfaceVariant">@color/my_dark_surface</item>
        <item name="colorOnSurfaceVariant">@color/my_dark_on_surface</item>
    </style>
</resources>